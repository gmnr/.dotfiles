[user]
	name = mini-gui
	email = guido.minieri@gmail.com

[alias]
    ll = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short
	l = log --oneline
    ss = status
    au = add -u
    pu = push origin master
    cm = commit -m
    co = checkout
    br = branch -v
    sb = submodule

[color]
	branch = auto
	diff = auto
	status = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = green
	changed = yellow
	untracked = red

[core]
	excludesfile = /Users/guido/.gitexcludes

[credential]
	helper = osxkeychain
