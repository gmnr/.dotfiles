# Taskwarrior program configuration file.
# Use the command 'task show' to see all defaults and overrides

# Files
data.location=~/.task

# sanity
weekstart=monday
search.case.sensitive=no
dateformat=Y/M/D

# Reports
# inbox report
report.inbox.columns           = id,description,scheduled.remaining,due.remaining,tags
report.inbox.description       = Inbox
report.inbox.filter            = status:pending +inbox pro:""
report.inbox.labels            = ID,Description,Sch,Due,Tags
report.inbox.sort              = id+

# Next
report.next.description        = What to work on next
report.next.columns            = id,depends,priority,project,tags,recur,scheduled.countdown,due.remaining,until.remaining,description
report.next.filter             = status:pending +next
report.next.labels             = ID,Depends,Priority,Project,Tag,Recur,Scheduled,Due,Until,Description
report.next.sort               = project-,priority-

# Ticker
report.ticker.description      = Things that are scheduled for later
report.ticker.columns          = id,depends,priority,project,tags,recur,scheduled.countdown,due.remaining,until.remaining,description
report.ticker.filter           = status:pending +SCHEDULED
report.ticker.labels           = ID,Depends,Priority,Project,Tag,Recur,Scheduled,Due,Until,Description

# Later
report.later.description       = Review this one a week
report.later.columns           = id,depends,priority,project,tags,recur,scheduled.countdown,due.remaining,until.remaining,description
report.later.filter            = status:pending +later
report.later.labels            = ID,Depends,Priority,Project,Tag,Recur,Scheduled,Due,Until,Description

# Project
report.prj.description         = Inactive tasks linked to projects
report.prj.columns             = id,depends,priority,project,tags,recur,scheduled.countdown,due.remaining,until.remaining,description
report.prj.filter              = status:pending -next pro.not:"" -SCHEDULED
report.prj.labels              = ID,Depends,Priority,Project,Tag,Recur,Scheduled,Due,Until,Description
