{
  "title": "Hide mouse when scrolling with vimium in browser",
  "rules": [
    {
      "description": "d (Browser): also hides cursor",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "d" },
          "to": [
            { "key_code": "d" },
            {
              "software_function": {
                "set_mouse_cursor_position": {
                  "x": "100%",
                  "y": "90%",
                  "screen": 0
                }
              }
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^org\\.chromium\\.Chromium$",
                "^com\\.google\\.Chrome$"
              ]
            }
          ]
        }
      ]
    }
  ]
}
