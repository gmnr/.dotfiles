# Taskwarrior program configuration file.
# Use the command 'task show' to see all defaults and overrides

# Files
data.location=/Users/guido/.task

# Basic config
weekstart=monday
search.case.sensitive=no

# change date format
dateformat=D/M/y
dateformat.annotation=D/M/Y H:N
dateformat.edit=D/M/Y H:N
dateformat.info=D/M/Y H:N

# List all projects
list.all.projects=yes

# set priority values
urgency.uda.priority.L.coefficient=-1.8

# gtd config
urgency.user.tag.inbox.coefficient=15.0

# define standard inbox report
report.inbox.columns=id,owner,due.relative,description
report.inbox.description=Inbox for GDT
report.inbox.filter=status:pending folder:inbox
report.inbox.labels=ID,Owner,Due,Description

# add owner to default report
report.next.columns=id,start.age,entry.age,depends,priority,owner,folder,project,recur,scheduled.countdown,due.relative,until.remaining,description,urgency
report.next.labels=ID,Active,Age,Deps,P,Owner,Folder,Project,Recur,S,Due,Until,Description,Urg
report.next.filter=status:pending -WAITING

# add folder and owner to the waiting report
report.waiting.columns=id,start.active,entry.age,folder,owner,depends.indicator,priority,project,tags,recur.indicator,wait,wait.remaining,scheduled,due,until,description
report.waiting.labels=ID,A,Age,Folder,Owner,D,P,Project,Tags,R,Wait,Remaining,Sched,Due,Until,Description

# add next report
report.nx.description=List next actions
report.nx.filter=status:pending folder:next
report.nx.columns=id,start.age,entry.age,depends,priority,owner,project,recur,scheduled.countdown,due.relative,until.remaining,description,urgency
report.nx.labels=ID,Active,Age,Deps,P,Owner,Project,Recur,S,Due,Until,Description,Urg

# add later report
report.later.description=List later/maybe actions
report.later.filter=folder:later
report.later.columns=id,start.age,entry.age,depends,priority,owner,project,recur,scheduled.countdown,due.relative,until.remaining,description,urgency
report.later.labels=ID,Active,Age,Deps,P,Owner,Project,Recur,S,Due,Until,Description,Urg

# where to save info
#data.location=~/.local/share/task
#hooks.location=~/.config/task/hooks

# Color theme (uncomment one to use)
#include light-16.theme
#include light-256.theme
#include dark-16.theme
#include dark-256.theme
#include dark-red-256.theme
#include dark-green-256.theme
#include dark-blue-256.theme
#include dark-violets-256.theme
#include dark-yellow-green.theme
#include dark-gray-256.theme
#include dark-gray-blue-256.theme
#include solarized-dark-256.theme
#include solarized-light-256.theme
#include no-color.theme

# show what's new
news.version=2.6.0

# define owner attribute
uda.owner.type=string
uda.owner.label=Owner

# define folder attribute
uda.folder.type=string
uda.folder.label=Folder
