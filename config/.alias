# aliases

# folder
alias dot='cd ~/.dotfiles'
alias dev='cd ~/Coding'
alias blog='cd ~/Coding/blog'
alias finance='cd ~/.finance'
alias notes='cd ~/.notes'
alias ..='cd ..'
alias ...='cd ../..'

# colors on ls
alias ls='eza --all --git-ignore'
alias ll='eza --long --header --all --git --sort=modified --reverse'

# advent of code utilities
alias aoc='~/Coding/advent-of-code/utils/startup.sh'
alias aocd='cd ~/Coding/advent-of-code'

# rename programs
alias python='python3'
alias pip='pip3'
alias less='less -R'
alias mv='mv -v'
alias rm='rm -i -v'
alias cp='cp -v'
alias tmux='TERM=xterm-256color tmux'
alias u='brew update && brew upgrade && nvim +"lua require(\"lazy\").sync()"'
alias cat='bat --style="numbers,changes,header" --italic-text=always'
alias rg='rg -S'
alias n='nvim'
alias nn='nvim "+lua project_files()"'
alias ny='nvim "+lua open_live_grep()"'
alias ns='nvim "+lua open_git_status()"'
alias copy='pbcopy'
alias g='run_git'
alias ua='nvim --headless +"lua annotate()" +"q!" && nvim +$ ~/.notes/notepad/$(date +%Y%m%d).md'
alias uu='nvim "+lua open_notes()"'
alias uy='nvim "+lua open_grep_notes()"'
alias db='nvim "+DBUI"'
alias cfg='nvim "+lua open_conf()"'
alias tree='tree -I .git -a'

# ledger aliases
alias hl='hledger --pretty'
alias hlj='hledger print'
alias e='nvim +$ ~/.finance/periods/2024.journal'
alias ea='nvim +$ ~/.finance/others/alfredo.journal'
alias out='bal cash bank -p thismonth -D --transpose -T amt:"<0" --drop 1'   # cash outflow
alias roi='clear; hledger roi --pretty --pnl "unrealized" -V --inv'
alias dadv='clear; hledger -f ~/.finance/others/alfredo.journal roi --pretty --pnl "unrealized" -V --inv VNGA'
alias pp='python ~/.finance/.src/scripts/fetch-mkt-prices.py'
alias p='cat ~/.finance/prices/current_prices.journal'

# taskwarrior aliases
alias t='task'
alias c='task add'
alias tn='~/.dotfiles/config/tasks/task-note.py'
alias tf='read_task'
alias ta='task_mod'
alias te='task edit'
alias to='task edit +LATEST'
alias ti='task pro:inbox'

# kmonad
alias QQ='sudo killall kmonad'
alias qq='~/.dotfiles/config/kmonad/startup.sh'
