# aliases

# folder
alias dot='cd ~/.dotfiles'
alias dev='cd ~/Coding'
alias blog='cd ~/Coding/blog'
alias finance='cd ~/.finance'
alias notes='cd ~/.notes'
alias tmp='cd /tmp'
alias ..='cd ..'
alias ...='cd ../..'

# colors on ls
if [[ "$OSTYPE" == "darwin"* ]]; then
    alias ll='gls -alth --color=auto'
    alias ls='gls --color=auto'
else
    alias ll='ls -alth --color=auto'
    alias ls='ls --color=auto'
fi

# advent of code utilities
alias aocg='~/Coding/advent-of-code/utils/startup.sh'
alias aocd='cd ~/Coding/advent-of-code'
alias aoc='cd ~/Coding/advent-of-code && nvim'

# rename programs
alias python='python3'
alias pip='pip3'
alias less='less -R'
alias mv='mv -v'
alias rm='rm -i -v'
alias cp='cp -v'
alias tmux='TERM=xterm-256color tmux'
alias u='brew update && brew upgrade && nvim +PlugUpdate'
alias cat='bat'
alias grep='rg -S'
alias v='nvim'
alias vp='nvim "+lua Project_files()"'
alias vim='nvim'
alias vi='nvim'
alias copy='pbcopy'
alias g='run_git'
alias n='nvim +exe ~/.notes/scratchpad/$(date "+%Y-%m-%d").md'

# ledger aliases
alias ldg='hledger --pretty'
alias bs='clear; hledger bs --pretty -Vt --drop 1 -3'
alias iss='clear; hledger is --pretty -tS --drop 1 -3'
alias is='clear; hledger is --pretty -tS --drop 1 -p thismonth'
alias cf='clear; hledger cf --pretty -tS --drop 1'
alias roi='clear; hledger roi --pretty --pnl "unrealized" --value=now --inv'
alias regg='clear; hledger reg'
alias reg='clear; hledger reg -p thismonth'
alias aregg='clear; hledger areg'
alias areg='clear; hledger areg -p thismonth'
alias cash='clear; hledger print assets:cash | hledger -f- bal income: expenses: --pretty --drop 1 -t --invert'
alias reconcile='python ~/.finance/.src/reconcile.py'
alias prices='python ~/.finance/.src/fetch.py'
alias current='cat ~/.finance/prices/current_prices.journal'
alias bal='clear; hledger bal --pretty'
alias jrn='hledger print'
alias e='nvim "+normal G" ~/.finance/periods/2023.journal'
alias dad='clear; hledger -f ~/.finance/others/alfredo.journal bse --pretty -V --drop 1'
alias fede='clear; hledger -f ~/.finance/others/fede.journal bse --pretty -V --drop 1'

# source taskwarrior aliases
source  ~/.dotfiles/tasks/helpers.sh
