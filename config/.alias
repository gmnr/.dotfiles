# aliases

# folder
alias dot='cd ~/.dotfiles'
alias dev='cd ~/Coding'
alias blog='cd ~/Coding/blog'
alias finance='cd ~/.finance'
alias notes='cd ~/.notes'
alias ..='cd ..'
alias ...='cd ../..'

# colors on ls
if [[ "$OSTYPE" == "darwin"* ]]; then
    alias ll='gls -alth --color=auto'
    alias ls='gls --color=auto'
else
    alias ll='ls -alth --color=auto'
    alias ls='ls --color=auto'
fi

# advent of code utilities
alias aocg='~/Coding/advent-of-code/utils/startup.sh'
alias aocd='cd ~/Coding/advent-of-code'
alias aoc='cd ~/Coding/advent-of-code && nvim'

# rename programs
alias python='python3'
alias pip='pip3'
alias less='less -R'
alias mv='mv -v'
alias rm='rm -i -v'
alias cp='cp -v'
alias tmux='TERM=xterm-256color tmux'
alias u='brew update && brew upgrade && nvim +PlugUpdate'
alias cat='bat'
alias grep='rg -S'
alias rg='rg -S'
alias n='nvim'
alias ny='nvim "+lua Project_files()"'
alias copy='pbcopy'
alias g='run_git'
alias a='nvim --headless +"lua Annotate()" +"q!" && nvim +$ ~/.notes/notepad/$(date +%Y%m%d).md'
alias tree='tree -I .git'

# ledger aliases
alias hl='hledger --pretty'
alias hlj='hledger print'
alias e='nvim "+$" ~/.finance/periods/2023.journal'
alias out='bal cash bank -p thismonth -D --transpose -T amt:"<0" --drop 1'   # cash outflow
alias roi='clear; hledger roi --pretty --pnl "unrealized" -V --inv'
alias dadv='clear; hledger -f ~/.finance/others/alfredo.journal roi --pretty --pnl "unrealized" -V --inv VNGA'
alias fedev='clear; hledger -f ~/.finance/others/fede.journal roi --pretty --pnl "unrealized" -V --inv VWCE'
alias pp='python ~/.finance/.src/scripts/fetch-mkt-prices.py'
alias p='cat ~/.finance/prices/current_prices.journal'

# source taskwarrior aliases
source  ~/.dotfiles/config/tasks/helpers.sh

# kmonad
alias QQ='sudo killall kmonad'
alias qq='~/.dotfiles/config/kmonad/startup.sh'
