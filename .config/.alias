# aliases
alias dev='cd ~/Coding'
alias adv='cd ~/Coding/advent-of-code && vim'
alias adv-folder='cd ~/Coding/advent-of-code'
alias adv-get-input='~/Coding/advent-of-code/utils/startup.sh'
alias blog='cd ~/Coding/blog'
alias home='ssh home-server'
alias python='python3'
alias pip='pip3'
alias less='less -R'
alias mv='mv -v'
alias rm='rm -i -v'
alias cp='cp -v'
alias dot='cd ~/.dotfiles'
alias tmux='TERM=xterm-256color tmux'
alias update='brew update && brew upgrade'
alias ..='cd ..'
alias ...='cd ../..'
alias cat='bat'
alias grep='rg'
alias vim='nvim'
alias copy='pbcopy'
alias tsk='task'
alias ledger='hledger'
alias fnc='cd ~/.finance'
alias reconcile='python ~/.finance/source/reconcile.py'

# check os version
if [[ "$OSTYPE" == "darwin"* ]]; then
    alias ll='gls -alth --color=auto'
    alias ls='gls --color=auto'
else
    alias ll='ls -alth --color=auto'
    alias ls='ls --color=auto'
fi
