# Taskwarrior program configuration file.
# Use the command 'task show' to see all defaults and overrides

# Files
data.location=/Users/guido/.task

# Basic config
weekstart=monday
search.case.sensitive=no

# change date format
dateformat=D/M/y
dateformat.annotation=D/M/Y H:N
dateformat.edit=D/M/Y H:N
dateformat.info=D/M/Y H:N

# List all projects
list.all.projects=yes

# set priority values
urgency.uda.priority.L.coefficient=-1.8

# gtd config
urgency.user.tag.inbox.coefficient=15.0
report.in.columns=id,description
report.in.description=Inbox for GDT
report.in.filter=status:pending limit:page (+inbox)
report.in.labels=ID,Description

# gdt next report
report.next.filter=+next
report.next.columns=id,start.age,entry.age,depends,priority,project,recur,scheduled.countdown,due.relative,until.remaining,description,urgency
report.next.labels=ID,Active,Age,Deps,P,Project,Recur,S,Due,Until,Description,Urg

# where to save info
#data.location=~/.local/share/task
#hooks.location=~/.config/task/hooks

# Color theme (uncomment one to use)
#include light-16.theme
#include light-256.theme
#include dark-16.theme
#include dark-256.theme
#include dark-red-256.theme
#include dark-green-256.theme
#include dark-blue-256.theme
#include dark-violets-256.theme
#include dark-yellow-green.theme
#include dark-gray-256.theme
#include dark-gray-blue-256.theme
#include solarized-dark-256.theme
#include solarized-light-256.theme
#include no-color.theme

# show what's new
news.version=2.6.0
