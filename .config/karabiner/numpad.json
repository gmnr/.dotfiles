{
  "title": "Microsoft Numpad",
  "rules": [
    {
      "description": "Better handling of NumPad",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "keypad_num_lock"
          },
          "to_if_alone": [
            {
              "repeat": true,
              "key_code": "equal_sign"
            }
          ],
          "to_if_held_down": [
            {
              "repeat": true,
              "key_code": "spacebar",
              "modifiers": [
                "left_command"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": [
                "left_shift"
              ]
            },
            "key_code": "keypad_slash"
          },
          "to": [
            {
              "repeat": true,
              "key_code": "9",
              "modifiers": [
                "left_shift"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": [
                "left_shift"
              ]
            },
            "key_code": "keypad_asterisk"
          },
          "to": [
            {
              "repeat": true,
              "key_code": "0",
              "modifiers": [
                "left_shift"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": [
                "left_shift"
              ]
            },
            "key_code": "keypad_6"
          },
          "to": [
            {
              "repeat": true,
              "key_code": "right_arrow"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": [
                "left_shift"
              ]
            },
            "key_code": "keypad_4"
          },
          "to": [
            {
              "repeat": true,
              "key_code": "left_arrow"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": [
                "left_shift"
              ]
            },
            "key_code": "keypad_8"
          },
          "to": [
            {
              "repeat": true,
              "key_code": "up_arrow"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": [
                "left_shift"
              ]
            },
            "key_code": "keypad_5"
          },
          "to": [
            {
              "repeat": true,
              "key_code": "down_arrow"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": [
                "left_shift"
              ]
            },
            "key_code": "keypad_enter"
          },
          "to": [
            {
              "repeat": true,
              "key_code": "spacebar"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": [
                "left_shift"
              ]
            },
            "key_code": "keypad_0"
          },
          "to": [
            {
              "repeat": true,
              "key_code": "tab"
            }
          ]
        }
      ]
    }
  ]
}
